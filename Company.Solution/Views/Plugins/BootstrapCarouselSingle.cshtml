@{
    ViewBag.Title = "Bootstrap Carousel";
}
@section css
{
    <style>
        .carousel {
            margin-bottom: 0;
            padding: 40px 40px 30px 40px;
        }

        .carousel-button {
            font-size: 40px;
        }

        .carousel-control {
            left: -12px;
        }

            .carousel-control.right {
                right: -12px;
            }

        .carousel-indicators {
            right: 50%;
            top: auto;
            bottom: 0px;
            margin-right: -19px;
        }

            .carousel-indicators li {
                background: #c0c0c0;
            }

            .carousel-indicators .active {
                background: #333333;
            }
    </style>
}

<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>


<h1>Bootstrap Thumbnail Slider</h1>
<div class="well">
    <div id="myCarousel" class="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Carousel items -->
        <div class="carousel-inner">
            <div class="item active">
                <div class="row">
                    <div class="col-md-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a></div>
                    <div class="col-md-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a></div>
                    <div class="col-md-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive" "></a></div>
                    <div class="col-md-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive" "></a></div>
                </div><!--/row-fluid-->
            </div><!--/item-->
            <div class="item">
                <div class="row">
                    <div class="col-md-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a></div>
                    <div class="col-md-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a></div>
                    <div class="col-md-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a></div>
                    <div class="col-md-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a></div>
                </div><!--/row-fluid-->
            </div><!--/item-->
            <div class="item">
                <div class="row">
                    <div class="col-md-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a></div>
                    <div class="col-md-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a></div>
                    <div class="col-md-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a></div>
                    <div class="col-md-3"><a href="#x" class="thumbnail"><img src="http://placehold.it/250x250" alt="Image" class="img-responsive"></a></div>
                </div><!--/row-fluid-->
            </div><!--/item-->
        </div><!--/carousel-inner-->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">@Html.FontAwesome(FontAwesomeIconSet.ChevronCircleLeft, "carousel-button")</a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">@Html.FontAwesome(FontAwesomeIconSet.ChevronCircleRight, "carousel-button")</a>
    </div><!--/myCarousel-->
</div><!--/well-->
@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).ready(function () {
                $('#myCarousel').carousel({
                    interval: 10000
                })
            });
        });
    </script>
}
